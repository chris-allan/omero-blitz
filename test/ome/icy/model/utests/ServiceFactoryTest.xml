<beans>	
  <bean id="managedService" abstract="true" class="org.springframework.aop.framework.ProxyFactoryBean">
    <property name="interceptorNames">
      <list><value>handler</value></list>
    </property>
  </bean>
  <bean id="handler" class="org.springframework.aop.interceptor.JamonPerformanceMonitorInterceptor"/>
  <bean name="internal:ome.api.IAdmin" class="ome.logic.AdminImpl"/>
    <bean name="managed:ome.api.IAdmin" parent="managedService">
    <property name="proxyInterfaces">
      <list>
        <value>ome.api.IAdmin</value>
        <value>ome.api.local.LocalAdmin</value>        
      </list>
    </property>
    <property name="target" ref="internal:ome.api.IAdmin"/>
  </bean> 
  <bean name="internal:omeis.providers.re.RenderingEngine" class="ome.services.RenderingBean"/>
  <bean name="managed:omeis.providers.re.RenderingEngine" parent="managedService">
    <property name="proxyInterfaces">
      <list>
        <value>omeis.providers.re.RenderingEngine</value>        
      </list>
    </property>
    <property name="target" ref="internal:omeis.providers.re.RenderingEngine"/>
  </bean>  
 
</beans>