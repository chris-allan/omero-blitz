<beans>

  <description>
  Defines various strategies for restricting concurrent method invocations. Also
  handles memory usage semantics.  
  </description>

  <alias name="serialThrottlingStrategy" alias="throttlingStrategy"/>

  <bean id="serialThrottlingStrategy" class="ome.services.throttling.SerialThrottlingStrategy"/>

  <!-- Servants =============================================================-->

  <bean id="omero.api.IConfig" class="ome.services.blitz.impl.ThrottledConfigI">
    <constructor-arg ref="managed:ome.api.IConfig"/>
    <constructor-arg ref="throttlingStrategy"/>
  </bean>
  
</beans>
