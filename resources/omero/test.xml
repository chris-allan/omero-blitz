<!-- Stub configuration for OMERO.blitz.test -->

<beans>

 <alias name="internal-ome.api.IAdmin" alias="managed-ome.api.IAdmin"/>
 <bean id="internal-ome.api.IAdmin" factory-bean="mock:ome.api.IAdmin" factory-method="proxy"/>
 
 <alias name="internal-ome.api.IQuery" alias="managed-ome.api.IQuery"/>
 <bean id="internal-ome.api.IQuery" factory-bean="mock:ome.api.IQuery" factory-method="proxy"/>
 
 <alias name="internal-ome.api.IUpdate" alias="managed-ome.api.IUpdate"/>
 <bean id="internal-ome.api.IUpdate" factory-bean="mock:ome.api.IUpdate" factory-method="proxy"/>
 
 <alias name="internal-ome.api.RawPixelsStore" alias="managed-ome.api.RawPixelsStore"/>
 <bean id="internal-ome.api.RawPixelsStore" factory-bean="mock:ome.api.RawPixelsStore" factory-method="proxy"/>
 
 <bean id="managed-omeis.providers.re.RenderingEngine" factory-bean="mock:omeis.providers.re.RenderingEngine" factory-method="proxy"/>
 
 <bean id="securitySystem" factory-bean="securityMock" factory-method="proxy"/>
 <bean id="methodSecurity" factory-bean="methodMock" factory-method="proxy"/>
 <bean id="sessionManager" factory-bean="sessionsMock" factory-method="proxy"/>
 <bean id="executor"       factory-bean="executorMock" factory-method="proxy"/>
 <!-- Here it is necessary to specify the HardWiredInterceptors instances
 even if they are *not* specified in Spring -->
 <bean id="securityWiring" class="ome.security.basic.BasicSecurityWiring">
   <property name="securitySystem" ref="securitySystem"/> 
   <property name="methodSecurity" ref="methodSecurity"/> 
 </bean>

 <bean id="mock:ome.api.IAdmin" class="org.jmock.Mock">
   <constructor-arg value="ome.api.local.LocalAdmin" type="java.lang.Class"/>
 </bean>

 <bean id="mock:ome.api.IQuery" class="org.jmock.Mock">
   <constructor-arg value="ome.api.local.LocalQuery" type="java.lang.Class"/>
 </bean>

  <bean id="mock:ome.api.IUpdate" class="org.jmock.Mock">
   <constructor-arg value="ome.api.local.LocalUpdate" type="java.lang.Class"/>
 </bean>

 <bean id="mock:ome.api.RawPixelsStore" class="org.jmock.Mock">
   <constructor-arg value="ome.api.RawPixelsStore" type="java.lang.Class"/>
 </bean>

 <bean id="mock:omeis.providers.re.RenderingEngine" class="org.jmock.Mock">
   <constructor-arg value="omeis.providers.re.RenderingEngine" type="java.lang.Class"/>
 </bean>
 
 <bean id="securityMock" class="org.jmock.Mock">
   <constructor-arg value="ome.security.SecuritySystem" type="java.lang.Class"/>
 </bean>

 <bean id="methodMock" class="org.jmock.Mock">
   <constructor-arg value="ome.security.MethodSecurity" type="java.lang.Class"/>
 </bean>
 
  <bean id="sessionsMock" class="org.jmock.Mock">
   <constructor-arg value="ome.services.sessions.SessionManager" type="java.lang.Class"/>
 </bean>

 
  <bean id="executorMock" class="ome.icy.fixtures.ExecutorMockFactory"/>

</beans>
