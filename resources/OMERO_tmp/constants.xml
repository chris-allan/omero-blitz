<!--

	Configuration for ICE services.
 
-->


<beans>	
  <bean name="ice_constant" abstract="true"
    class="org.springframework.beans.factory.config.FieldRetrievingFactoryBean">
    <property name="targetField" value="value"/>
  </bean>

  <bean id="USERNAME" parent="ice_constant">
    <property name="targetClass" value="omero.constants.USERNAME"/>
  </bean>
  <bean id="PASSWORD" parent="ice_constant">
    <property name="targetClass" value="omero.constants.PASSWORD"/>
  </bean>
  <bean id="GROUP" parent="ice_constant">
    <property name="targetClass" value="omero.constants.GROUP"/>
  </bean>
  <bean id="EVENT" parent="ice_constant">
    <property name="targetClass" value="omero.constants.EVENT"/>
  </bean>

</beans>
